<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.rishabh.iiithack.MainActivity"
    >

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="#888888"
      >

  <android.support.v7.widget.CardView
      android:layout_width="400dp"
      android:layout_height="wrap_content"
      android:layout_margin="24dp"
      >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:gravity="center"
        >

      <TextView
          android:text="Hospitalisation form"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:id="@+id/textView3"
          android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
          android:background="#ffa1a1"
          android:minHeight="58dp"
          android:gravity="center"
          />

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:paddingLeft="16dp"
          android:paddingRight="16dp"
          >
      <TextView
          android:text="Scan QR code"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:id="@+id/textView4"
          android:minHeight="42dp"
          android:textColor="#ffffff"
          android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
          android:background="#719B9A"
          android:gravity="center"

          android:onClick="getQRScan"
          />

      <EditText
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:inputType="textPersonName"
          android:ems="10"
          android:layout_marginTop="32dp"
          android:id="@+id/etUserId"
          android:hint="User Id"
          />
      <EditText
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:inputType="textPersonName"
          android:ems="10"
          android:layout_marginTop="24dp"
          android:id="@+id/etName"
          android:hint="Name"
          />

      <EditText
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:inputType="textPersonName"
          android:ems="10"
          android:id="@+id/etGender"
          android:hint="Gender"
          android:layout_marginTop="24dp"
          />
      <EditText
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:inputType="textPersonName"
          android:ems="10"
          android:id="@+id/etDob"
          android:layout_marginTop="24dp"
          android:hint="DOB"
          />
      <EditText
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:inputType="textPersonName"
          android:ems="10"
          android:id="@+id/etRelation"
          android:hint="Relation"
          android:layout_marginTop="24dp"
          />
      <EditText
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:inputType="textPersonName"
          android:ems="10"
          android:id="@+id/etAddress"
          android:hint="Address"
          android:layout_marginTop="24dp"
          />
      <EditText
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:inputType="textPersonName"
          android:ems="10"
          android:id="@+id/etPatientStat"
          android:hint="Patient Status"
          android:minHeight="104dp"
          android:layout_marginTop="24dp"
          android:gravity="top|center_vertical"
          />
      <EditText
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:inputType="textPersonName"
          android:ems="10"
          android:id="@+id/etSymtoms"
          android:hint="Symptoms"
          android:minHeight="104dp"
          android:layout_marginTop="24dp"
          android:gravity="top|center_vertical"
          />
      <EditText
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:inputType="textPersonName"
          android:ems="10"
          android:id="@+id/etPrescibeMed"
          android:hint="Prescribed Medicines"
          android:minHeight="104dp"
          android:layout_marginTop="24dp"

          android:gravity="top|center_vertical"

          />

      <TextView
          android:text="Submit"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:id="@+id/tvSubmit"
          android:minHeight="42dp"
          android:textColor="#ffffff"
          android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
          android:background="#719B9A"
          android:gravity="center"
          android:onClick="submitData"
          />
      </LinearLayout>

    </LinearLayout>

  </android.support.v7.widget.CardView>
  </RelativeLayout>
</ScrollView>
